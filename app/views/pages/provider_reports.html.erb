<div class="col s12 m6 l6">
  <div id="prefixes" class="card card card-default scrollspy">
    <div class="card-content">
      <h4 class="card-title">Reports</h4>
      <div class="col s12">
        <div class="row">
          <%= form_tag(provider_reports_path) do %>
            <div class="input-field col s4">
              <%= select_tag "class_rooms", options_from_collection_for_select(@class_rooms, "id", "name"), include_blank: true %>
              <label>Class Rooms</label>
            </div>
            <div class="input-field col s4">
              <%= submit_tag("Filter", :id=>"button", :class=>"waves-effect waves-light btn", :name=>"submit") %>
            </div>
          <% end %>
        </div>
        <div class="row">
          <div class="col s12">
            <% @class_records.each do |class_room| %>
              <div class="row">
                <div class="col s8 group-row">
                  <p><%= class_room.name %></p>
                </div>
                <br>
                <div class="class-data">
                  <br>
                  <div class="col s6 subgroup-row">
                    <p>Students</p>
                  </div>
                  <% class_room.students.each do |student| %>
                    <div class="col s8">
                      <div class="row">
                        <p><%= student.name %></p>
                      </div>
                    </div>
                  <% end %>
                  <div class="col s6 subgroup-row">
                    <div class="col s4">
                      <p>Disciplines</p>
                    </div>
                    <div class="col s4">
                      <p>Teacher</p>
                    </div>
                  </div>
                  <% class_room.teacher_class_room_disciplines.each do |item_relation| %>
                    <div class="col s8">
                      <div class="row">
                        <div class="col s3">
                          <p><%= item_relation.discipline.name %></p>
                        </div>
                        <div class="col s3">
                          <p><%= item_relation.teacher.name %></p>
                        </div>
                      </div>
                    </div>
                  <% end %>
                  <div class="col s6 subgroup-row">
                    <p>Totals:</p>
                  </div>
                  <div class="col s8">
                    <div class="row">
                      <div class="col s3">
                        <p>Students: <%= class_room.students.size %></p>
                      </div>
                      <div class="col s3">
                        <p>Disciplines: <%= class_room.teacher_class_room_disciplines.size %></p>
                      </div>
                      <div class="col s3">
                        <p>Teachers: <%= class_room.teachers.size %></p>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>